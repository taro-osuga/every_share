<div class="row">
  <div class="col-md-3">
    <%= render 'item_menu' %>
  </div>
  <div class="col-md-9">
    <div class="panel panel-default">

      <div class="panel-heading">
        レンタルエリア
      </div>

      <div class="panel-body">
        <div class="container">
          <%= form_for @items do |f| %>

            
            <div class="row">
              <div class="form-group">
                <label>レンタルエリア</label>
                <%= f.text_field :address, placeholder: "レンタル可能エリアはどこですか?", class: "form-control", required: true, id: "autoaddress" %>
              </div>
            </div>

            <div class="text-center">
              <%= f.submit "レンタルエリア保存", class: "btn btn-form" %>
            </div>

          <% end %>
        </div>
      </div>

    </div>
  </div>
</div>
