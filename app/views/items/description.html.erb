<div class="row">
  <div class="col-md-3">
    <%= render 'item_menu' %>
  </div>
  <div class="col-md-9">
    <div class="panel panel-default">

      <div class="panel-heading">
        詳細
      </div>

      <div class="panel-body">
        <div class="container">
          <%= form_for @items do |f| %>

            <div class="row">
              <div class="form-group">
                <label>アイテム名</label>
                <%= f.text_field :item_name, placeholder: "アイテム名", class: "form-control", required: true %>
              </div>
            </div>

            <div class="row">
              <div class="form-group">
                <label>詳細</label>
                <%= f.text_area :summary, rows: 5, placeholder: "アイテム説明", id: "summary", class: "form-control", required: true %>
              </div>
            </div>

            <div class="text-center">
              <%= f.submit "アイテム説明保存", class: "btn btn-form" %>
            </div>

          <% end %>
        </div>
      </div>

    </div>
  </div>
</div>
