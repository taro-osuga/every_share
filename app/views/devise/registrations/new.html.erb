<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <h2 class="text-center"><%=t('.sign_up')%></h2>
    <br/>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render 'shared/devisemes' %>

      <div class="form-group">
        <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder: t('activerecord.attributes.user.name'), class:"form-control" %>
      </div>

      <div class="form-group">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: t('activerecord.attributes.user.email'), class:"form-control" %>
      </div>

      <div class="form-group">
        <%= f.password_field :password, autocomplete: "new-password", placeholder: t('devise.passwords.edit.new_password'), class:"form-control" %>
      </div><br />

      <div class="form-group">
        <%= f.label :image, "プロフィール画像" %>
        <%= f.file_field :image, autofocus: true, autocomplete: "image", placeholder: "image", class:"form-control" %>
      </div><br />


      <div class="actions">
        <%= f.submit t('.sign_up'), class: "btn btn-normal btn-block" %>
      </div>
    <% end %>

    <hr/>
    <%= link_to t('devise.shared.links.Sign in with Facebook'), user_facebook_omniauth_authorize_path, class: "btn btn-facebook btn-block" %>
  </div>
</div>
