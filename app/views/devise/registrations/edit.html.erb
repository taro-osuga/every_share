<div class="row">
  <div class="col-md-3">
    <ul class="sidebar-list">
    <% if @user.image? %>
          <img src='<%= @user.image %>'  class = "avatar-full">
        <% else %>
          <img src="<%= asset_path "default.png" %>"  class = "avatar-full">
        <% end %>
    <br/>
    <%= link_to "プロフィール確認", user_path(current_user.id), class: "btn btn-default" %>
    <br/>
    <%= link_to "ユーザー削除", root_path, method: :delete, data: {confirm: '本当に削除していいですか?'}, class: "btn btn-default-danger" %>
    </ul>
  </div>
  <div class="col-md-9 text-center">
    <div class="panel panel-default">
      <div class="panel-heading">あなたのプロフィール</div>
      <div class="panel-body">
        <div class="container">
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
            <%= render 'shared/devisemes' %>

            <div class="form-group">
              <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder: "名前", class:"form-control" %>
            </div>

            <div class="form-group">
              <%= f.text_field :phone_number, autofocus: true, autocomplete: "name", placeholder: "電話番号", class:"form-control" %>
            </div>

            <div class="form-group">
              <%= f.text_area :description, rows: 5, cols: 25, autofocus: true, autocomplete: "name", placeholder: "詳細", class:"form-control" %>
            </div>

            <div class="form-group">
              <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", class:"form-control" %>
            </div>

            <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
              <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
            <% end %>

            <div class="form-grou">
              <%= f.password_field :password, autocomplete: "new-password", placeholder: "New Password", class:"form-control" %>
            </div><br />

            <div class="form-group">
              <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Confirm Password", class:"form-control"  %>
            </div>

            <%= "プロフィール画像" %>
            <div class="form-group">
            <%= f.file_field :image, autofocus: true, autocomplete: "image", placeholder: "image", class:"form-control" %>
            </div><br />

            <div class="actions">
              <%= f.submit "保存", class: "btn btn-normal btn-block" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>

  </div>
</div>