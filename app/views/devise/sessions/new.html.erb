<div class="row">
  <div class="col-md-4 col-md-offset-4">

    <h2 class="text-center"><%=t('.sign_in')%></h2>
    <br/>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-group">
        <%= f.email_field :email, autofocus: true, autocomplete: "email" ,placeholder: t('activerecord.attributes.user.email'), class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.password_field :password, autocomplete: "current-password" ,placeholder: t('activerecord.attributes.user.password'), class: "form-control"  %>
      </div>

      <div>
        <% if devise_mapping.rememberable? %>
          <%= f.check_box :remember_me %> <%=t('activerecord.attributes.user.remember_me')%>
        <% end %>
        <span class="pull-right">
        <%= link_to t('devise.shared.links.forgot_your_password'), new_user_password_path %>
        </span>
      </div>
      <br/>
      

      <div class="actions">
        <%= f.submit t('.sign_in') , class: "btn btn-normal btn-block"%>
      </div>
    <% end %>

    <hr/>
    <%= link_to t('devise.shared.links.Sign in with Facebook'), user_facebook_omniauth_authorize_path, class: "btn btn-facebook btn-block" %>
  </div>
</div>