<div class="row">
  <div class="col-md-6 col-md-offset-3">

      <h2 class="text-center"><%=t('.forgot_your_password')%></h2>
      <br/>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= render 'shared/devisemes' %>

      <div class="form-group">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: t('activerecord.attributes.user.email'), class:"form-control" %>
      </div>

      <div class="actions">
        <%= f.submit t('.send_me_reset_password_instructions'), class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>